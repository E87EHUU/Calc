<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        Theme.AppCompat.Light.NoActionBar
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"> ?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Calc.DefaultTheme">
        <item name="materialButtonStyle">@style/CalcButton.Default</item>
        <item name="calcActionButton">@style/CalcButton.Action.Default</item>
    </style>

    <style name="Theme.Calc.OrangeTheme">
        <item name="materialButtonStyle">@style/CalcButton.Orange</item>
        <item name="calcActionButton">@style/CalcButton.Action.Orange</item>
    </style>

    <style name="Theme.Calc.BlueTheme">
        <item name="materialButtonStyle">@style/CalcButton.Blue</item>
        <item name="calcActionButton">@style/CalcButton.Action.Blue</item>
    </style>

</resources>